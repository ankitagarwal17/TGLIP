<div class="inaugrate-campaign">
  <div class="inaugrate-msg">
    <p>Inaugurate the campaign with your pioneer tree.</p>
  </div>
  <div id="contact-form" class="person-details">
    <form id="contact" action="">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" value="">
      </div>
      <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" value="">
      </div>
      <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" value="">
      </div>
      <button type="submit" class="btn btn-default submit">Click Here</button>
    </form>
  </div>
  <div class="on-submit-show-message"><p id="message"></p></div>
  <%= link_to 'Back to Homepage Page', root_path, class:"link-to" %>
</div>

<script>
  function sendContactForm() {
    var name = document.getElementById('name').value;
    var email = document.getElementById('email').value;
    var text = "Thank you for planting a tree with us " + name + ' ' + 'your mail id is' + ' ' + email + '.' + '\n' +
                "Welcome to the 5 Star Social Initiative"
    $('.on-submit-show-message').fadeIn('fast');
    document.getElementById("message").innerHTML = text;
    setTimeout(function() {
      $('.on-submit-show-message').fadeOut('slow');
    }, 5000);
  }
  $('#contact').submit(function () {
    sendContactForm();
    return false;
  });
</script>